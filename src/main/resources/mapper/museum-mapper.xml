<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="museum">
    <insert id="create" parameterType="museum" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO db_mw.museum (
            name,
            logo,
            picture,
            address
        )
        VALUES (
            #{name},
            #{logo},
            #{picture},
            #{address}
        );
    </insert>
    <delete id="remove">
        DELETE FROM db_mw.museum
        WHERE museum.id = #{id}
    </delete>
    <update id="modify">
        UPDATE db_mw.museum
        SET
            name    = #{name},
            logo    = #{logo},
            picture = #{picture},
            address = #{address}
        WHERE museum.id = #{id}
    </update>
    <select id="queryAll" resultType="museum">
        SELECT *
        FROM db_mw.museum
        ORDER BY id
    </select>
    <select id="queryById" resultType="museum">
        SELECT *
        FROM db_mw.museum
        WHERE museum.id = #{id}
    </select>

